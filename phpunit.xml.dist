<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="../../autoload.php" colors="true">
    <testsuites>
        <testsuite name="exchange">
            <directory>./tests</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./src</directory>
        </whitelist>
    </filter>
</phpunit>